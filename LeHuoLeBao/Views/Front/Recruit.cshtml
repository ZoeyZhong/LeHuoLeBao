<div class="gallery">
    <div class="container">
        <h3>人员招聘</h3>
        <div class="typrography">
            <div class="container">
                <section id="tables">

                    <div class="bs-docs-example">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>岗位类别</th>
                                    <th>岗位名称</th>
                                    <th>薪金</th>
                                    <th>要求</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (true)
                                    {
                                        var db = new HappyEntities();
                                        var root = (from a in db.t_f_recruit
                                                    where a.isDel == false
                                                    select new
                                                    {
                                                        recruitid = a.recruitid,//职位ID
                                                        re_name = a.re_name, //职位名称
                                                        re_type = a.re_type,//职位类别
                                                        re_money = a.re_money,//薪金
                                                        re_require = a.re_require//要求
                                                    }).Distinct().OrderByDescending(ob => ob.recruitid);
                                        foreach (var p in root)
                                        {
                                            <tr>
                                                <td>@(p.re_type)</td>
                                                <td>@(p.re_name)</td>
                                                <td>@(p.re_money)</td>
                                                <td>@(p.re_require)</td>
                                            </tr>
                                        }
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>
</div>

